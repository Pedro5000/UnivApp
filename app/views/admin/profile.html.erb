<%
  content_for :title, "Edit Profile | Admin | Tech University"
  content_for :admin_title, "Dashboard > Profile"
%>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header card-header-danger">
            <h4 class="card-title">Edit Profile</h4>
            <p class="card-category">Complete your profile</p>
          </div>

          <div class="card-body">
            <%= form_for(current_user) do |f| %>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :major, class: 'bmd-label-floating' %>
                    <%= f.select(:major, [['Computer Science', 'computer_science'], ['Philosophy', 'philosophy'], ['Quantum Physics', 'quantum_physics']],{},{class: 'form-control'}) %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="bmd-label-floating">Full Name</label>
                    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your full name' %>
                  </div>
                </div>
              </div>

              <label class="bmd-label-floating">Profile Picture</label>
              <%= f.text_field :profile_pic, class: 'form-control',placeholder: 'Paste the link to your profile picture' %>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="bmd-label-floating">Email Address</label>
                    <%= f.email_field :email, class: 'form-control',placeholder: 'Enter your email address' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>About Me</label>
                    <div class="form-group">
                      <%= f.text_area :bio, class: 'form-control', rows: '5' %>
                    </div>
                  </div>
                </div>
              </div>
              <%= f.button 'Submit Updates', class: 'btn btn-danger pull-right' %>
              <div class="clearfix"></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card card-profile">
          <div class="card-avatar">
            <%= link_to student_path(current_user) do %>
              <img class="img" src="<%= current_user.profile_pic %>" />
            <% end %>
          </div>
          <div class="card-body">
            <h6 class="card-category">Tech University Member</h6>
            <h4 class="card-title"><%= current_user.name %></h4>
            <p class="card-description">
              You can view your public profile right away by clicking the button below.
            </p>
            <%= link_to 'View Profile', student_path(current_user), class: 'btn btn-danger btn-round' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
