<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title ">Courses</h4>
        <p class="card-category"> List of this semester courses</p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class=" text-primary">
              <th>
                ID
              </th>
              <th>
                Ref.
              </th>
              <th>
                Name
              </th>
              <th>
                Description
              </th>
            </thead>
            <tbody>
              <% @courses.each do |course| %>
              <tr>
                <td>
                  <%= course.id %>
                </td>
                <td>
                  <%= course.short_name %>
                </td>
                <td>
                  <%= course.name %>
                </td>
                <td>
                  <%= course.description %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>




