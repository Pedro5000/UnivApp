<%
  content_for :title, "Students Directory | Tech University"
%>

<div class="row">
  <div class="col s12">
    <h3 class="center-align">Students Directory</h3>
    <div class="row">
      <% @students.each do |student| %>
      <div class="col s12 m6 l6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <div class="row">
              <div class="col s9 m9 l9">
                <span class="card-title"><%= student.name %></span>
                <small>"<i><%= student.bio %></i>"</small>
              </div>
              <div class="profile-pic_index col s3 m3 l3">
                <figure>
                  <img src="<%= student.profile_pic %>" alt="">
                </figure>
              </div>
            </div>
            <p><%= student.email %></p>
            <p>Major: <%= student.major.titleize %></p>
            <p>Course <%= ('Enrollement').pluralize(student.courses.count) %>:
              <% if student.courses.count > 0 %>
              <%= student.courses.count %>
              <% else %>
              None
              <% end %>
            </p>
          </div>
          <div class="card-action">
            <%= link_to 'View Profile', student_path(student) %>
            <% if current_user.status == 'admin' %>
            <%= link_to 'Edit User Profile', edit_student_path(student), class: 'right' %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
